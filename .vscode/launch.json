    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Launch PCO Mail",
            "type": "python",
            "request": "launch",
            "module": "pco_mail",
            "args": ["-a", "${env:PCO_APP_ID_JOHANNES}",
                     "-t", "${env:PCO_TOKEN_JOHANNES}",
                     "-g", "${env:GMAIL_APP_PASSWORD}",
                     "-v",
                     "--votd",
                     "--reminder-celebration",
                     "--dry-run"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}